<legend>{{#if content.id}}Edit{{else}}Create{{/if}} Contact</legend>

{{#with content}}
  <div class="control-group">
    <label class="control-label" for="firstName">First name</label>
    <div class="controls">
      {{view Ember.TextField valueBinding="firstName" id="firstName" placeholder="First name" required="true"}}
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="lastName">Last name</label>
    <div class="controls">
      {{view Ember.TextField valueBinding="lastName" id="lastName" placeholder="Last name" required="true"}}
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="email">Email</label>
    <div class="controls">
      {{view Ember.TextField valueBinding="email" id="email" type="email" placeholder="Email address"}}
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="notes">Notes</label>
    <div class="controls">
      {{view Ember.TextArea valueBinding="notes" id="notes" placeholder="Notes"}}
    </div>
  </div>
  <div class="control-group">
    {{#each phoneNumbers}}
      <div class="controls">
        {{view Ember.TextField valueBinding="number" placeholder="Number"}}
      </div>
    {{/each}}
    <a class="btn" {{action addNumber}}>Add a phone number</a>  
  </div>
{{/with}}
<div class="form-actions">
  {{#if content.id}}
    {{submitButton "Update"}}
  {{else}}
    {{submitButton "Create"}}
  {{/if}}
  <a class="btn" {{action cancelEdit}}>Cancel</a>
</div>
